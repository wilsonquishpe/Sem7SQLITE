<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sem7SQLITE.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de registro" />
            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre"></Entry>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"></Entry>
            <Entry x:Name="txtCOntrasena" Placeholder="Ingrese la contrasena"></Entry>
            <Button x:Name="btnAgregar" Text="Agregar" Clicked="btnAgregar_Clicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>